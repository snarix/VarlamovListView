<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarlamovListView.MegaEdit"
             Title="MegaEdit">
    <StackLayout Padding="10" 
             Spacing="15">
        <Label Text="Тип процессора" />
        <Entry x:Name="typeCPU"/>

        <Label Text="Память" />
        <Entry x:Name="memory"/>

        <Label Text="HDD" />
        <Entry x:Name="hdd" />

        <Label Text="Видео" />
        <Entry x:Name="video"/>

        <Button Text="Изменить"
                Clicked="EditClick"/>
        <Button Text="Отмена"
                Clicked="EndClick"/>
        
    </StackLayout>
</ContentPage>