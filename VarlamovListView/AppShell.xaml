<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VarlamovListView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VarlamovListView"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab>
            <ShellContent Title="Главная страница"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage"/>
            <ShellContent Title="Страница просмотра"
                          ContentTemplate="{DataTemplate local:Edit}"
                          Route="Edit"/>
        </Tab>
    </TabBar>

</Shell>
